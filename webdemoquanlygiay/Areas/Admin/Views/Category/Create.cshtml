                            <option value="3">giay the thao</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label><strong>Sap xep</strong></label>
                        <select name="dd" class="form-control">
                        
                            <option value="1">sau giay nam </option>
                            <option value="2">giay nu</option>
                            <option value="3">giay the thao</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label><strong>Trang thai</strong></label>
                        <select name="dd" class="form-control">
                          
                            <option value="1">chon trang thai </option>
                            <option value="2">chua xuat ban</option>
                            <option value="3">xuat ban</option>
                        </select>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>

