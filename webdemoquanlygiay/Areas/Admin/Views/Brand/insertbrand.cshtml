@model webdemoquanlygiay.Models.Brand

@{ ViewBag.Title = "insertbrand";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="container">
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Thêm thương hiệu sản phẩm</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="mb-3">Tên thương hiệu sản phẩm</label>
                        <div class="col-md-10 mb-3">
                            <input class="form-control" type="text" name="brandName" required />
                            @Html.ValidationMessageFor(model => model.brandName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-success" />
                        </div>
                    </div>
                </div>}

    <div>
        @Html.ActionLink("Quay lại danh sách", "listbrand")
    </div>
</div>

